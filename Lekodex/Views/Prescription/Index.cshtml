@model DoctorViewModel
@{
    ViewData["Title"] = "Prescription Page";
}

<a asp-controller="Prescription" asp-action="Add" class="btn btn-success">Go to add</a>

<div>
    Doctors data:
    Name:@Model.Name
</div>

<form asp-controller="Prescription" asp-action="Index">
    <input type="text" name="FilterString" />
    <button type="submit" class="btn btn-success">Filter</button>
</form>

<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">
                    #
                </th>
                <th scope="col">
                    Name
                </th>
                <th scope="col">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prescription in Model.Prescriptions)
            {
                <tr>
                    <th scope="row">@(Model.Prescriptions.IndexOf(prescription)+1)</th>
                    <td>@prescription.Name</td>
                    <td>
                        <a asp-area="" asp-controller="Prescription" asp-action="View" asp-route-indexOfPrescription="@Model.Prescriptions.IndexOf(prescription)">View</a>
                        |
                        <a asp-area="" asp-controller="Prescription" asp-action="Delete" asp-route-indexOfPrescription="@Model.Prescriptions.IndexOf(prescription)">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
